<h1><%= @cocktail.name %></h1>
<%= link_to "Home", cocktails_path %>
<%#= link_to "Add dose", new_dose_path %>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<ol>
  <% @cocktail.doses.each do |dose|%>
    <li> <%= dose.description %> of <%= dose.ingredient.name %>
    <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete?"} %>
    </li>
  <% end %>
</ol>

<%= render "doses/new", cocktail: @cocktail,  dose: @dose %>


